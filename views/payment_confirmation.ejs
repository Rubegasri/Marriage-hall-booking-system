<!-- views/payment.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h2>Payment</h2>
        <div id="bookingDetails">
            <p>Name: <%= booking.name %></p>
            <p>Email: <%= booking.email %></p>
            <p>Phone Number: <%= booking.phone %></p>
            <p>Date: <%= booking.date.toLocaleDateString() %></p>
            <p>Service: <%= booking.service %></p>
            <p>Advance Amount: <%= booking.advance %></p>
        </div>
        <form action="/payment_confirmation" method="POST">
            <label for="cardNumber">Card Number:</label>
            <input type="text" id="cardNumber" name="cardNumber" required><br><br>
            <label for="expiry">Expiry Date:</label>
            <input type="month" id="expiry" name="expiry" required><br><br>
            <label for="cvv">CVV:</label>
            <input type="text" id="cvv" name="cvv" required><br><br>
            <button type="submit">Pay Now</button>
        </form>
    </div>
</body>
</html>